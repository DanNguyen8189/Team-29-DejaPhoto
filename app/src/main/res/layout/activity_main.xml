<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"

    tools:context="com.team29.cse110.team29dejaphoto.MainActivity">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/serviceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="starter"
                    android:text="Start Service" />

                <Button
                    android:id="@+id/stopServiceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="stopper"
                    android:text="Stop Service" />


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="394dp"
                android:layout_height="307dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="84dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.312">

                <TextView
                    android:id="@+id/selectAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"

                    android:text="Select the photo album"
                    android:textColor="@color/font_color"
                    android:textSize="30dp"
                    tools:layout_below="@+id/linearLayout"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="5dp" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                    android:id="@+id/RadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignLeft="@+id/selectAlbum"

                    android:layout_alignStart="@+id/selectAlbum"
                    android:layout_below="@+id/selectAlbum"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="34dp"
                    android:orientation="vertical"
                    tools:layout_below="@+id/selectAlbum"
                    tools:layout_centerVertical="true"
                    tools:layout_editor_absoluteX="8dp">

                    <RadioButton
                        android:id="@+id/DefaultAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        android:onClick="onClickRadioButton"
                        android:text="Default Photo Album" />

                    <RadioButton
                        android:id="@+id/DejaAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="26dp"
                        android:onClick="onClickRadioButton"
                        android:text="Custom Deja Photo Album" />


                </RadioGroup>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/RadioGroup"
                    android:layout_alignEnd="@+id/selectAlbum"
                    android:onClick="onCreateCustomAlbum"
                    android:layout_alignRight="@+id/selectAlbum"
                    android:layout_marginBottom="15dp"
                    android:text="Create a Custom Deja Photo Album" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="303dp">


                <TextView
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Settings"
                    android:textSize="20dp"/>

                <Switch
                    android:id="@+id/dejavuMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/dejavuMode"
                    android:layout_below="@+id/settings"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Text here"
                    android:textSize="20dp"/>

                <Switch
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dejavuMode"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    />

                <Switch
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"/>
            </RelativeLayout>

</RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
