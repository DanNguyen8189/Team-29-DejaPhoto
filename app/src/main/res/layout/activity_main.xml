<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean_art"

    tools:context="com.team29.cse110.team29dejaphoto.MainActivity">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Switch
                    android:id="@+id/serviceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/appSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/serviceButton"
                    android:text="DejaPhoto is not running!"
                    android:textColor="@color/defaultText"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="@dimen/text_size1"
                    />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="394dp"
                android:layout_height="307dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="84dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.312">

                <TextView
                    android:id="@+id/selectAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"

                    android:text="Select the photo album"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30dp"
                    tools:layout_below="@+id/linearLayout"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="5dp" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

                    android:id="@+id/RadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignLeft="@+id/selectAlbum"

                    android:layout_alignStart="@+id/selectAlbum"
                    android:layout_below="@+id/selectAlbum"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="34dp"
                    android:orientation="vertical"
                    tools:layout_below="@+id/selectAlbum"
                    tools:layout_centerVertical="true"
                    tools:layout_editor_absoluteX="8dp">

                    <RadioButton
                        android:id="@+id/DefaultAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        android:onClick="onClickRadioButton"
                        android:text="Default Photo Album" />

                    <RadioButton
                        android:id="@+id/DejaAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="26dp"
                        android:onClick="onClickRadioButton"
                        android:enabled="false"
                        android:text="Custom Deja Photo Album (Coming soon!)" />


                </RadioGroup>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/RadioGroup"
                    android:layout_alignEnd="@+id/selectAlbum"
                    android:onClick="onCreateCustomAlbum"
                    android:layout_alignRight="@+id/selectAlbum"
                    android:layout_marginBottom="15dp"
                    android:text="Create a Custom Deja Photo Album"
                    android:enabled="false"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="300dp"
                >

                <TextView
                    android:id="@+id/settings1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-----Whose Photos?-----"
                    android:textSize="@dimen/text_size2"/>

                <CheckBox
                    android:id="@+id/your_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings1"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:text="View Your Photos"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"
                    />

                <CheckBox
                    android:id="@+id/friend_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/your_photos"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:text="View Friends' Photos"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"
                    />

                <CheckBox
                    android:id="@+id/share_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friend_photos"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:text="Share your photos!"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/share_photos"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:padding="10dp"
                    android:text="Manage Friends"
                    android:textAllCaps="false"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
                android:layout_below="@+id/relativeLayout2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp">


                <TextView
                    android:id="@+id/settings2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-----DejaVu Settings-----"
                    android:textSize="@dimen/text_size2"/>

                <Switch
                    android:id="@+id/dejavuMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings2"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:checked="true" />

                <TextView
                    android:id="@+id/dejavuText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/dejavuMode"
                    android:layout_below="@+id/settings2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:text="DejaVu Mode enabled"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"/>

                <Switch
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dejavuMode"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"
                    android:checked="true" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/location"
                    android:layout_below="@+id/dejavuMode"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Location enabled"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"/>

                <Switch
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"
                    android:checked="true" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/time"
                    android:layout_below="@+id/location"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Time enabled"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"/>

                <Switch
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"
                    android:checked="true" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/date"
                    android:layout_below="@+id/time"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Date enabled"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"/>

                <TextView
                    android:id="@+id/updateIntervalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateText"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:text="Update Interval:"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"
                    />

                <TextView
                    android:id="@+id/updateIntervalNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateText"
                    android:layout_toRightOf="@+id/updateIntervalText"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="25dp"
                    android:text="5 minutes"
                    android:textColor="@color/defaultText"
                    android:textSize="@dimen/text_size1"
                    />


                <SeekBar
                    android:id="@+id/updateIntervalBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/updateIntervalText"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="30dp"
                    android:max="359"
                    android:progress="5"
                    />

            </RelativeLayout>


</RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
